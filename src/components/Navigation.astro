<nav x-data="{ mobileMenuToggle: false }" class="bg-gray-800">
	<div class="wrapper">
	  <div class="relative flex h-16 items-center justify-between">
		<div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
		  <!-- Mobile menu button-->
		  <!-- "{{ slug | camelize }} = !{{ slug | camelize }}" -->
		  <button @click="mobileMenuToggle = !mobileMenuToggle" type="button" class="relative inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
			<span class="absolute -inset-0.5"></span>
			<span class="sr-only">Open main menu</span>
			<!--
			  Icon when menu is closed.
  
			  Menu open: "hidden", Menu closed: "block"
			-->
			<svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
			  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
			</svg>
			<!--
			  Icon when menu is open.
  
			  Menu open: "block", Menu closed: "hidden"
			-->
			<svg class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
			  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
			</svg>
		  </button>
		</div>
		<div class="flex flex-1 items-center justify-center sm:justify-start">
			<div class="flex flex-shrink-0 items-center">
				<A4thLogo class:list={['w-12 h-auto']} />
		  	</div>
		  	<div class="hidden sm:ml-6 sm:block">
				<div class="flex space-x-4">
					{ menuitems.map((item, index) => (
						<a href={item.path} class={currentPath === item.path ? "rounded-md bg-gray-900 px-3 py-2 text-sm font-medium text-white" : "rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white" }
						aria-current={currentPath === item.path ? "page" : "false"}>
							{item.title}
						</a>
					)) }
				</div>
		  	</div>
		</div>
	  </div>
	</div>

	<!-- Mobile menu, show/hide based on menu state. -->
	<div x-show="mobileMenuToggle" class="sm:hidden" id="mobile-menu">
	  <div class="space-y-1 px-2 pb-3 pt-2">
		{ menuitems.map((item, index) => (
            <a href={item.path} class={currentPath === item.path ? "block rounded-md px-3 py-2 text-base font-medium bg-gray-900 text-white" : "block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white" }
			class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white"
			aria-current={currentPath === item.path ? "page" : "false"}>
            	<span> {item.title}</span>
            </a>
		)) }
	  </div>
	</div>
  </nav>
  