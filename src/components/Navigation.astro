---
import A4thLogo from './A4thLogo.astro';
const currentPath = Astro.url.pathname;
const menuitems = [
  {
    title: "Home",
    path: "/",
  },
  {
    title: "Return & Recovery",
    path: "/return-recovery",
  },
  {
    title: "Veteran Portraits",
    path: "/veteran-portfolio",
  },
  {
    title: "Supporters",
    path: "/supporters",
  },
  {
    title: "Contact Us",
    path: "/contact-us",
  },
];
