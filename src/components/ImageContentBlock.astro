---
interface Props {
	order: string;
  title: string;
}

const { order = 'lg:order-first', title = '' } = Astro.props;
---
<div class="bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto grid max-w-2xl grid-cols-1 items-start gap-x-8 gap-y-16 sm:gap-y-24 lg:mx-0 lg:max-w-none lg:grid-cols-2">
        <div class={`${order} lg:pr-4`}>
          <div class="relative overflow-hidden rounded-3xl bg-gray-900 px-6 pb-28 pt-64 shadow-2xl sm:px-12 lg:max-w-lg lg:px-8 lg:pb-20 xl:px-10 xl:pb-10">
            <slot name="image" />
            <!-- <Image src={images[imgSrc]()} alt="" class="absolute inset-0 h-full w-full object-cover brightness-125 saturate-0" /> -->
            <div class="absolute left-1/2 top-1/2 -ml-16 -translate-x-1/2 -translate-y-1/2 transform-gpu blur-3xl" aria-hidden="true">
              <div class="aspect-[1097/845] w-[68.5625rem] bg-gradient-to-tr from-[#ff4694] to-[#776fff] opacity-40" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
            </div>
          </div>
        </div>
        <div>
          <div class="text-base leading-7 text-gray-700 lg:max-w-lg prose">
            <h1 class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">{ title }</h1>
            <div class="max-w-xl">
              <slot />
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
